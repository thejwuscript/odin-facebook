<div class="flash" data-controller="removals">
  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %><button type="button" data-action="click->removals#remove">X</button></p>
  <% end %>
  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %><button type="button" data-action="click->removals#remove">X</button></p>
  <% end %>
</div>